<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_title_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y144"
    android:background="@color/title_bg_color">

    <TextView
        android:id="@+id/title_bar_left_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingLeft="@dimen/paddingLeftRight"
        android:paddingRight="@dimen/paddingLeftRight"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/x54"
        android:visibility="visible"
        tools:text="返回" />

    <ImageView
        android:id="@+id/title_bar_left_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingLeft="@dimen/paddingLeftRight"
        android:paddingRight="@dimen/paddingLeftRight"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title_bar_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxLines="1"
        android:textColor="#3C3C3C"
        android:textSize="@dimen/x54"
        tools:text="标题" />

    <ImageView
        android:id="@+id/title_bar_right_image2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/title_bar_right_image"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="@dimen/paddingLeftRight"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/title_bar_right_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingLeft="@dimen/paddingLeftRight"
        android:paddingRight="@dimen/paddingLeftRight"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title_bar_right_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingLeft="@dimen/paddingLeftRight"
        android:paddingRight="@dimen/paddingLeftRight"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/x48"
        android:visibility="visible"
        tools:text="编辑" />

    <View
        android:id="@+id/title_bar_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerHeight"
        android:layout_alignParentBottom="true"
        android:background="#e1e1e1"
        android:visibility="gone" />
</RelativeLayout>