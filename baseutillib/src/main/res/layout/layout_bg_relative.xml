<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y144">

    <ImageView
        android:id="@+id/relative_left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/paddingLeftRight"
        android:visibility="visible" />

    <TextView
        android:id="@+id/relative_left_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x20"
        android:layout_toRightOf="@+id/relative_left_image"
        android:textColor="#3C3C3C"
        android:textSize="@dimen/x46"
        android:visibility="visible"
        tools:text="内容" />

    <EditText
        android:id="@+id/relative_right_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/relative_left_text_view"
        android:background="@null"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/paddingLeftRight"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/x32"
        android:visibility="gone"
        tools:text="内容" />

    <TextView
        android:id="@+id/relative_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x20"
        android:layout_toLeftOf="@+id/relative_right_image"
        android:maxLines="1"
        android:textColor="#3C3C3C"
        android:textSize="@dimen/x32"
        tools:text="标题" />

    <ImageView
        android:id="@+id/relative_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/paddingLeftRight"
        android:visibility="visible" />

    <View
        android:id="@+id/relative_top_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerHeight"
        android:background="@color/dividerColor"
        android:visibility="invisible" />

    <View
        android:id="@+id/relative_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerHeight"
        android:layout_alignParentBottom="true"
        android:background="@color/dividerColor" />

    <View
        android:id="@+id/relative_bg_effect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground" />
</RelativeLayout>