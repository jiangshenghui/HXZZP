<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f6"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp">
            <RelativeLayout
                android:id="@+id/re_title_left_icon"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_height="match_parent" >
                <ImageView
                    android:id="@+id/title_left_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/black_back"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付"
            android:textColor="@color/color_ff"
            android:layout_centerInParent="true"
            android:textSize="18sp"  />
    </RelativeLayout>
   <ImageView
       android:id="@+id/iv_pay_logo"
       android:layout_width="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="45dp"
       android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付成功"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff279f02"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_vip_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff3c3c3c"
        android:layout_marginTop="54dp"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_vip_partner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#C3C3C3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        />

    <RelativeLayout
        android:id="@+id/re_complete"
        android:layout_width="200dp"
        android:layout_marginTop="149dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/no_bond_bg_selector"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="完成"
            android:textColor="#ff279f02"
            android:textSize="16sp"
            />
    </RelativeLayout>
</LinearLayout>