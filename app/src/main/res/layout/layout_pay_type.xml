<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_r8_bg_user"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/re_wx"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/iv_wx"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_pay_wx"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/iv_wx"
            android:textColor="@color/color_ff"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="微信支付"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_ce_wx"
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_image_select"
            android:layout_marginRight="29dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re_alpay"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/ic_alpay"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_pay_alpay"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_ff"
            android:layout_toRightOf="@+id/ic_alpay"
            android:textSize="16sp"
            android:text="支付宝支付"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_alpay"
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_image_un_grey_select"
            android:layout_marginRight="29dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
