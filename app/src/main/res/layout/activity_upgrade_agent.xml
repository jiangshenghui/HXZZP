<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp">
            <RelativeLayout
                android:id="@+id/re_title_left_icon"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_height="match_parent" >
                <ImageView
                    android:id="@+id/title_left_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/icon_navigation"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/re_title_right_icon"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent" >
                <ImageView
                    android:id="@+id/title_right_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/icon_share"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付"
            android:textColor="@color/color_ff"
            android:layout_centerInParent="true"
            android:textSize="18sp"  />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_qr"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_parner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_ff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_r8_bg_user"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="16dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150">
            <ImageView
                android:id="@+id/iv_icon_profit"
                android:layout_width="wrap_content"
                android:src="@mipmap/icon_profit"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_icon_profit"
                android:layout_marginLeft="6dp"
                android:text="收益"
                android:layout_centerVertical="true"
                android:textColor="#191919"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_ff"
                android:text="0元"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150">
            <ImageView
                android:id="@+id/iv_icon_user_num"
                android:layout_width="wrap_content"
                android:src="@mipmap/icon_user_num"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_icon_user_num"
                android:layout_marginLeft="6dp"
                android:text="用户数量"
                android:layout_centerVertical="true"
                android:textColor="#191919"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_user_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_ff"
                android:text="0人"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_upgrade"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/login_r8_bg_shape"
        android:text="升级合伙人"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp" />
</LinearLayout>